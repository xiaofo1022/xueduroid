<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here.
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        -->
        <item name="colorAccent">#DD212121</item>
    </style>9

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="searchViewStyle">@style/XueduSearchViewStyle</item>
    </style>

    <style name="XueduSearchViewStyle" parent="Base.Widget.AppCompat.SearchView.ActionBar">
        <item name="queryBackground">@color/darkGray</item>
        <item name="submitBackground">@null</item>
        <item name="searchHintIcon">@null</item>
        <item name="defaultQueryHint">@string/app_title</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="XueduEditText">
        <item name="android:textColorHint">#80212121</item>
        <item name="android:textColor">#212121</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="XueduInfoTitle">
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">-1dp</item>
        <item name="android:layout_marginLeft">-1dp</item>
        <item name="android:layout_marginRight">-1dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#fff</item>
    </style>
</resources>
